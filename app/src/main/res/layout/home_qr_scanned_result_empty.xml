<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/home_qr_scanned_result_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4.4"
            android:orientation="vertical"
            android:weightSum="3">
            <TextView
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:fontFamily="@font/phetsarath"
                android:singleLine="true"
                android:text="https://facebook.com/thiemtinhtenvbnvbnvbnvnvbnvbnvnvbnvbnv"
                android:textColor="@color/blue_primary"
                android:textSize="16sp"
                android:textFontWeight="700"
                android:textStyle="bold" />

            <Button
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@null"
                android:drawableStart="@drawable/ic_baseline_content_copy_24"
                android:fontFamily="@font/phetsarath"
                android:text="Copy"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#5BABBA"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="top|right"
                android:layout_margin="10dp"
                android:layout_marginEnd="6dp"
                app:srcCompat="@drawable/ic_baseline_cancel_24" />
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>