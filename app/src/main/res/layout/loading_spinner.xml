<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/loading_spinner_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_primary"
            android:outlineAmbientShadowColor="@color/blue_primary"
            android:outlineSpotShadowColor="@color/blue_primary"
            android:indeterminateTint="@color/gray_dark"

            />
        <TextView
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textAllCaps="false"
            android:fontFamily="@font/phetsarath"
            android:textStyle="bold"
            android:textColor="@color/blue_primary"
            android:textFontWeight="700"
            android:textSize="13sp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>