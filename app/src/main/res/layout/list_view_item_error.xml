<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/list_view_border"
    android:elevation="10dp"
    android:translationZ="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_list_item_logo"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_weight="2"
            android:background="@drawable/corner_radius_image"
            app:srcCompat="@drawable/instagram" />

        <EditText
            android:id="@+id/edit_list_item_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:background="@drawable/table_edittext"
            android:fontFamily="@font/phetsarath"
            android:hint="Facebook URL"
            android:inputType="textNoSuggestions"
            android:maxLength="40"
            android:paddingLeft="1dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/gray_dark"
            android:textColorHint="@color/gray_light"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_list_item_delete"
            android:layout_width="10dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_cancel_24" />
    </LinearLayout>
</androidx.cardview.widget.CardView>