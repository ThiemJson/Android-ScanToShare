<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.profile.ProfileInformation">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/table_layout_background"
        android:maxHeight="400dp"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:fontFamily="@font/phetsarath"
                    android:gravity="center_vertical"
                    android:paddingStart="13dp"
                    android:text="First name"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_light"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/profile_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="2"
                    android:width="0dp"
                    android:background="@drawable/table_edittext"
                    android:hint="Enter your first name"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gray_dark"
                    android:textColorHint="@drawable/table_edittext_hint"
                    android:textSize="13sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_layout_list_item_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:fontFamily="@font/phetsarath"
                    android:gravity="center_vertical"
                    android:paddingStart="13dp"
                    android:text="Last name"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_light"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/profile_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="2"
                    android:width="0dp"
                    android:background="@drawable/table_edittext"
                    android:hint="Enter your last name"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gray_dark"
                    android:textColorHint="@drawable/table_edittext_hint"
                    android:textSize="13sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:fontFamily="@font/phetsarath"
                    android:gravity="center_vertical"
                    android:paddingStart="13dp"
                    android:text="Position"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_light"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/profile_position"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="2"
                    android:width="0dp"
                    android:background="@drawable/table_edittext"
                    android:hint="Enter your position"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gray_dark"
                    android:textColorHint="@drawable/table_edittext_hint"
                    android:textSize="13sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_layout_list_item_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:fontFamily="@font/phetsarath"
                    android:gravity="center_vertical"
                    android:paddingStart="13dp"
                    android:text="Email"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_light"
                    android:textSize="13sp" />

                <EditText
                    android:focusable="false"
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="2"
                    android:width="0dp"
                    android:background="@drawable/table_edittext"
                    android:hint="Enter your email address"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@drawable/table_edittext_hint"
                    android:textSize="13sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:fontFamily="@font/phetsarath"
                    android:gravity="center_vertical"
                    android:paddingStart="13dp"
                    android:text="Company"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_light"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/profile_company"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="2"
                    android:width="0dp"
                    android:background="@drawable/table_edittext"
                    android:hint="Enter your company"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gray_dark"
                    android:textColorHint="@drawable/table_edittext_hint"
                    android:textSize="13sp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</FrameLayout>